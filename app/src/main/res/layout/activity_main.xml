<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/left_part"
        android:id="@+id/constant_tex"
        android:layout_width="243dp"
        android:layout_height="match_parent" />

    <include layout="@layout/middle_part"
        android:id="@+id/middle_edit_text"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/constant_tex"/>

    <include layout="@layout/calendar_part"
        android:id="@+id/calendarpart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/middle_edit_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>